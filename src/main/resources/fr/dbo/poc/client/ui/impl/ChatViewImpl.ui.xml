<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .chatPanel {
            width: 100%;
            height: 100%;
        }
    
       .tabPanel {
            width: 100%;
            height: 100%;
        }
 </ui:style>
    <g:VerticalPanel  addStyleNames="{style.chatPanel}">
        <g:TabLayoutPanel ui:field="tabPanel" barHeight="10" addStyleNames="{style.tabPanel}"></g:TabLayoutPanel>
    </g:VerticalPanel>
</ui:UiBinder>
